<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".AdminUpdateFuelPrice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5pt"
        android:orientation="horizontal">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/mvCancel"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:materialIcon="close"
            app:materialIconColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Update Fuel Price"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lytRon95"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_shape"
        android:elevation="10dp">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/ron95_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON95"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtRon95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price: Rm2.50/L"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytRon97"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_shape"
        android:elevation="10dp">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/ron97_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RON97"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtRon97"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price: Rm2.70/L"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytDiesel"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_shape"
        android:elevation="10dp">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/diesel_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIESEL"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDiesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price: Rm2.50/L"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        app:startIconDrawable="@drawable/ic_fuelpumpbakmainavigationsmallsize"
        app:boxStrokeColor="#FFC700">

        <EditText

            android:id="@+id/etFuelNewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Price"
            android:inputType="number"
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnUpdateNewPrice"
        android:layout_width="300dp"
        android:layout_height="55dp"

        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Update"
        />

</LinearLayout>