<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"

        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginLeft="15dp"
            android:text="Bak Mai Admin Panel"
            android:textColor="@color/black"
            android:textSize="25sp"

            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytUserVerifyRequest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_shape"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Pending"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/txtUserRequestPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#323232"
            android:textSize="80sp"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/lytAdminRegisterWorker"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/round_shape"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:elevation="10dp">

            <net.steamcrafted.materialiconlib.MaterialIconView

                android:layout_width="90dp"
                android:layout_height="90dp"
                app:materialIconColor="#323232"
                android:layout_gravity="center"
                app:materialIcon="account_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Worker"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytAdminUpdateFuelPrice"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/round_shape"
            android:elevation="10dp">

            <ImageView

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_fuelpumpbakmainavigation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Fuel Price"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#DFDFDF"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"

        android:background="@drawable/round_shape2"
        android:elevation="5dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            app:materialIcon="account_circle" />

        <TextView
            android:id="@+id/txtTotalWorker"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytSignOut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#FFC700"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"

        android:background="@drawable/round_shape2"
        android:elevation="5dp">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:layout_marginLeft="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            app:materialIcon="logout" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>